{
    "name": "openvidu-react",
    "version": "2.17.0",
    "author": "OpenVidu",
    "description": "OpenVidu React",
    "repository": {
        "type": "git",
        "url": "git://github.com/OpenVidu/openvidu-call-react"
    },
    "keywords": [
        "streaming",
        "webrtc",
        "openvidu",
        "media"
    ],
    "license": "Apache-2.0",
    "main": "dist/index.js",
    "module": "dist/index.js",
    "scripts": {
        "lint-dry": "eslint --ignore-path .gitignore . && stylelint --ignore-path .gitignore \"**/*.css\"",
        "lint-fix": "eslint --ignore-path .gitignore --fix . && stylelint --ignore-path .gitignore --fix \"**/*.css\"",
        "start": "react-scripts start",
        "test": "react-scripts test --env=jsdom",
        "build": "react-scripts build",
        "lib-post": "rimraf dist/index.js && rimraf dist/index.css && npm run lib-rename",
        "lib-rename": "node -e \"require('fs').rename('dist/index.dist.js', 'dist/index.js', function(err) { if (err) console.log(err); console.log('Successfully renamed index.') })\"",
        "lib-build": "rimraf dist && cross-env NODE_ENV=production babel src/ --out-dir dist --copy-files --ignore __tests__,spec.js,test.js,__snapshots__ && npm run lib-post",
        "lib-pack": "npm run lib-build && npm pack",
        "eject": "react-scripts eject"
    },
    "files": [
        "dist",
        "README.md"
    ],
    "stylelint": {
        "extends": "stylelint-config-standard"
    },
    "lint-staged": {
        "*/src/**/*.{js,jsx,ts,tsx,scss,md}": [
            "eslint --fix",
            "prettier --write"
        ]
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not ie <= 11",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version"
        ]
    },
    "engines": {
        "node": ">= 10",
        "npm": ">=6.x"
    },
    "devEngines": {
        "node": ">=10.x",
        "npm": ">=6.x"
    },
    "dependencies": {
        "react": "16.13.1",
        "react-dom": "16.13.1",
        "react-scripts": "^3.4.3",
        "prop-types": "^15.7.2",
        "@material-ui/core": "4.11.0",
        "@material-ui/icons": "4.9.1",
        "axios": "0.20.0",
        "jquery": "3.5.1",
        "openvidu-browser": "2.17.0",
        "typeface-roboto": "0.0.75"
    },
    "devDependencies": {
        "@babel/cli": "7.10.5",
        "@babel/core": "7.11.4",
        "@babel/preset-react": "7.10.4",
        "cross-env": "^7.0.3",
        "eslint-config-prettier": "^7.2.0",
        "eslint-plugin-prettier": "^3.3.1",
        "eslint-plugin-react-hooks": "^4.2.0",
        "htmlhint": "^0.14.2",
        "husky": "^4.3.8",
        "jsonlint": "^1.6.3",
        "lint-staged": "^10.5.4",
        "prettier": "^2.2.1",
        "rimraf": "^3.0.2",
        "stylelint": "^13.11.0"
    }
}
